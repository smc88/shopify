<article id="{{page.handle}}" class="page hentry span12">
	<header>
		<h1 class="entry-title">{{ page.title }}</h1>
		<p class="byline author vcard">Posted by <span class="fn" rel="author">{{page.author}}</span> on <time class="updated" datetime="{{ page.published_at | date: "%Y-%m-%dT%H:%M:%S%Z" }}" pubdate>{{ page.published_at | date: "%A, %B %d" }}</time></p>
	</header>
	<section class="entry-content">
		<h1 hidden>Article content</h1>
		{{ page.content }}
	</section>
</article>